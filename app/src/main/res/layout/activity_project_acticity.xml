<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProjectActicity"
    android:orientation="vertical"
    android:background="@color/bg_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="7sp"
        android:padding="10sp">

        <!--        Text:SWASNER-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SWASNER"
            android:textColor="#D7FFFFFF"
            android:gravity="center"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="15sp">


            <LinearLayout
                android:layout_width="0sp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="20sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Likes"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.3 K"
                        android:textColor="#B7FFFFFF"
                        android:textSize="30sp"
                        android:layout_marginEnd="5sp"/>

                    <ImageView
                        android:layout_width="25sp"
                        android:layout_height="match_parent"
                        android:src="@drawable/likes"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Views"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.3 K"
                        android:textColor="#B7FFFFFF"
                        android:textSize="30sp"
                        android:layout_marginEnd="5sp"/>

                    <ImageView
                        android:layout_width="25sp"
                        android:layout_height="match_parent"
                        android:src="@drawable/views"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comments"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.3 K"
                        android:textColor="#B7FFFFFF"
                        android:textSize="30sp"
                        android:layout_marginEnd="5sp"/>

                    <ImageView
                        android:layout_width="25sp"
                        android:layout_height="match_parent"
                        android:src="@drawable/comments"/>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/swasner"
                android:background="@drawable/round_corners_1"
                android:padding="5sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/round_corners_1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7sp"
            android:layout_marginBottom="10sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Problem"
                android:layout_marginStart="5sp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inadequate PPEs and masks, coupled with lack of
affordable critical care equipments, amplified this
outbreak into a major pandemic. Over 20 Lakh
People have died due to this, and we are still
years from complete eradication.
"
                android:layout_marginStart="5sp"
                android:textColor="#BEFFFFFF"
                android:textSize="14sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/round_corners_1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7sp"
            android:layout_marginBottom="10sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Benefits"
                android:layout_marginStart="5sp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="330sp"
                android:src="@drawable/benfits"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/round_corners_1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7sp"
            android:layout_marginBottom="10sp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <VideoView
                    android:id="@+id/videoplayer"
                    android:layout_width="match_parent"
                    android:layout_height="200sp"/>

            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/round_corners_1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7sp"
            android:layout_marginBottom="10sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="More Details"
                android:layout_marginStart="5sp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Swasner which is a hyperbaric chamber which is designed to treat ARDS patients, a primary disease caused by Coronavirus. On metric it reduces dependency on ventilator and also requires the patient to spend less time with the ventilator. It is is a modified chamber-like device which can help a patient breathe better, and can be used without a ventilator using oxygen wall mounts. The helmet uses Nasal intermittent positive pressure ventilation (NIPPV) to provide oxygen surplus air to the patient. Swasner consists of three major components, the bubble (or visor), the plastic rings, and the neck seal. The plastic bubble is transparent, flexible, and encloses the head of the patient entirely, thus making it more comfortable for the patient."
                android:textColor="#BEFFFFFF"
                android:textSize="14sp"
                android:layout_marginStart="5sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/round_corners_1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7sp"
            android:layout_marginBottom="10sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Other Creators"
                android:layout_marginStart="5sp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="5sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5sp">

                <ImageView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/prince"/>

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:text="Prince Pious Omm Prakash"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="4sp"
                    android:layout_marginBottom="4sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5sp">

                <ImageView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/anirudh"/>

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:text="Anirudh Parida"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="4sp"
                    android:layout_marginBottom="4sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5sp">

                <ImageView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/subhank"/>

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:text="Shubhank Nagar"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="4sp"
                    android:layout_marginBottom="4sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5sp">

                <ImageView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/aditya"/>

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:text="Aditya Panda"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="4sp"
                    android:layout_marginBottom="4sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5sp">

                <ImageView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/trideep"/>

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:text="Trideep Kumar Tripathy"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="4sp"
                    android:layout_marginBottom="4sp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>